@page "/delete"
@using Order.Common.Helpers
@inject HttpClient Http
@inject HelpSevice helpSevice

<h1>Delete Provider</h1>

@if (helpSevice.provider == null)
{
    <p><em>Loading...</em></p>
}

else
{
<div>
        <div>
            <div hidden="hidden"> <span><b>Id</b></span><br />  <input type="text" value="@helpSevice.provider.Id" /> </div>
                    <span><b>Name</b></span><br />      <input type="text" value="@helpSevice.provider.Name" />
                    <span><b>Address1</b></span><br />  <input type="text" value="@helpSevice.provider.Address1" />
                    <span><b>Address2</b></span><br />  <input type="text" value="@helpSevice.provider.Address2" />
                    <span><b>City</b></span><br />      <input type="text" value="@helpSevice.provider.City" />
                    <span><b>Zip</b></span><br />       <input type="text" value="@helpSevice.provider.Zip" />
                    <span><b>State</b></span><br />     <input type="text" value="@helpSevice.provider?.State?.Name" />
        </div>

        <button class="btn btn-primary" @onclick="@Remove">Remove</button>
</div>

@code {

        private async Task Remove()
        {
            var response = await Http.DeleteAsync($"https://localhost:44377/Provider/Delete/{helpSevice.provider.Id}");
        }
    }
}
